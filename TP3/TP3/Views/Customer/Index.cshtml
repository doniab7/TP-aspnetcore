@model List<TP3.Models.Customer>

<h2>Customer Index</h2>

<p>
    <a asp-action="Create">Create New Customer</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Membership Type</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Id</td>
                <td>@customer.Name</td>
                <td>@(customer.MembershipType != null ? customer.MembershipType.SignUpFee : "N/A")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@customer.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
